<UserControl
  x:Class="CrystalCircuits.Application.ModuleList"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:cc="using:CrystalCircuits.Application"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <StackPanel>
    <TextBlock Margin="10" Text="This flyout is centered!" />
    <Button Click="ButtonClickHandler" Content="Click Me" />
    <Canvas
      Width="400"
      Height="300"
      Background="LightGray">
      <!--  Position TextBlock at (10, 20)  -->
      <TextBlock
        Canvas.Left="10"
        Canvas.Top="20"
        FontSize="16"
        FontWeight="Bold"
        Foreground="DarkBlue"
        Text="Hello, Avalonia Canvas Text!" />

      <!--  Position another TextBlock at (50, 100)  -->
      <TextBlock
        Canvas.Left="50"
        Canvas.Top="100"
        FontSize="32"
        Foreground="DarkRed"
        Text="Another piece of text" />
      <cc:MyCustomControl
        Canvas.Left="150"
        Canvas.Top="100"
        Width="300"
        Height="200"
        Background="Red" />
    </Canvas>
  </StackPanel>
</UserControl>
